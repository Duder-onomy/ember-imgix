<div class='container'>
  {{imgix-image
    path='/examples/puffins.jpg'
    class='header-img'
    fit='crop'
  }}

  {{imgix-image
    path='/examples/jellyfish.jpg'
    class='feature-img'
    fit='crop'
  }}

  {{imgix-image path='/examples/lionfish.jpg' class='feature-img'}}
  {{imgix-image path='/examples/clownfish.jpg' class='feature-img'}}
  {{imgix-image path='/examples/fin.jpg' class='feature-img'}}
</div>

<div>
  Pass width and height in the path:
</div>
{{imgix-image
  class='imgix-image'
  path='/examples/jellyfish.jpg?h=400&w=1000'
  fit='clip'
}}

<div>
  Pass width and height as params to the component:
</div>
{{imgix-image
  path='/examples/jellyfish.jpg'
  width=500
  height=500
}}

<div>
  Just render full size.... like a normal image:
</div>
{{imgix-image
  path='/examples/jellyfish.jpg'
}}
